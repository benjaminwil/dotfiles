" syntax
hi MatchParen gui=bold guibg=none

" visuals
colorscheme codeschool
set formatoption+=1
set guicursor=n-v-c-i:PmenuSel
set guifont=Input\ Mono:h12
set transparency=2

" window
set lines=30 columns=100
set guioptions-=L
set guioptions-=r
set guioptions-=b
set guioptions-=T
set title titlestring=vim
