#!/bin/bash

# core configuration
chunkc core::hotload 0
chunkc core::log_file stdout
chunkc core::log_level warn
chunkc core::plugin_dir /usr/local/opt/chunkwm/share/chunkwm/plugins

# ffm configuration
chunkc set ffm_bypass_modifier fn

# global settings
chunkc set global_desktop_mode bsp
chunkc set global_desktop_offset_top 20
chunkc set global_desktop_offset_bottom 20
chunkc set global_desktop_offset_left 20
chunkc set global_desktop_offset_right 20
chunkc set global_desktop_offset_gap 15

chunkc set 2_desktop_offset_right 1440
chunkc set 3_desktop_offset_right 1440

chunkc set desktop_padding_step_size 10.0
chunkc set desktop_gap_step_size 5.0

chunkc set bsp_spawn_left 1
chunkc set bsp_optimal_ratio 1.3
chunkc set bsp_split_mode optimal
chunkc set bsp_split_ratio 0.5

chunkc set monitor_focus_cycle 1
chunkc set window_focus_cycle monitor

chunkc set window_float_next 0
chunkc set window_region_locked 1

# look and feel
chunkc set preselect_border_color 0x33eeff55
chunkc set preselect_border_width 3
chunkc set focused_border_color 0x33391391
chunkc set focused_border_width 6
chunkc set focused_border_radius 5
chunkc set focused_border_skip_floating 0

# mouse rules
chunkc set mouse_follows_focus intrinsic
chunkc set mouse_move_window \"fn 1\"
chunkc set mouse_resize_window \"fn 2\"
chunkc set mouse_motion_interval 35

# load chunkwm modules
chunkc core::load border.so
chunkc core::load tiling.so
chunkc core::load ffm.so

# set custom tiling rules for applications
chunkc tiling::rule --owner Emacs --except "^$" --state tile
chunkc tiling::rule --owner Messages --state float
chunkc tiling::rule --owner Preview --state float
