[commit]
  template = ~/.gitcommit.global
[core]
  excludesfile = ~/.gitignore.global
  editor = vim
[format]
  pretty = format:%Cgreen%h %Cblue%ci %Creset%s %Cblue<%aE> %Cred%d
[log]
  date = short
[merge]
	conflictstyle = diff3
[rebase]
	autosquash = true

# You can add this to your .gitconfig file with this syntax:
#
# [include]
#   path = ~/.gitconfig.global
