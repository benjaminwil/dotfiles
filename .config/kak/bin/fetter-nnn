#!/bin/sh

. fetter_init-check

initial_directory="${1}"

if [ "$initial_directory" = . ]
then
    selection="$(nnn -C -p -)"
else
    selection="$(nnn -C -p - "$initial_directory")"
fi

printf "evaluate-commands -try-client $KAKOUNE_CLIENT -verbatim -- edit! -existing '$selection'" | \
    kak -p $KAKOUNE_SESSION
