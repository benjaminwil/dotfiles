# open terminal
alt - return : open -na Alacritty

# focus window
alt - h : chunkc tiling::window --focus west
alt - j : chunkc tiling::window --focus south
alt - k : chunkc tiling::window --focus north
alt - l : chunkc tiling::window --focus east

# swap window
shift + alt - h : chunkc tiling::window --swap west
shift + alt - j : chunkc tiling::window --swap south
shift + alt - k : chunkc tiling::window --swap north
shift + alt - l : chunkc tiling::window --swap east

# mirror tree
alt - x : chunkc tiling::desktop --mirror horizontal
alt - y : chunkc tiling::desktop --mirror vertical

# toggle window parent zoom
alt - z : chunkc tiling::window --toggle parent

# create asymmetric tiled layout
alt - a : chunkc tiling::window --use-temporary-ratio -0.25 \
          --adjust-window-edge east
alt - s : chunkc tiling::window --use-temporary-ratio 0.25  \
          --adjust-window-edge east

# toggle window fullscreen
alt - f : chunkc tiling::window --toggle fullscreen
shift + alt - f : chunkc tiling::window --toggle native-fullscreen

# toggle window split type
alt - e : chunkc tiling::window --toggle split

# float / unfloat window and center on screen
alt - t : chunkc tiling::window --toggle float; \
          chunkc tiling::window --grid-layout 4:4:1:1:2:2

# equalize size of windows
shift + alt - 0 : chunkc tiling::desktop --equalize

# send window to desktop
shift + alt - 1 : chunkc tiling::window --send-to-desktop 1
shift + alt - 2 : chunkc tiling::window --send-to-desktop 2
shift + alt - 3 : chunkc tiling::window --send-to-desktop 3

# set insertion point for focused container
ctrl + alt - f : chunkc tiling::window --use-insertion-point cancel
ctrl + alt - h : chunkc tiling::window --use-insertion-point west
ctrl + alt - j : chunkc tiling::window --use-insertion-point south
ctrl + alt - k : chunkc tiling::window --use-insertion-point north
ctrl + alt - l : chunkc tiling::window --use-insertion-point east

# change layout of desktop
ctrl + alt - a : chunkc tiling::desktop --layout bsp
ctrl + alt - s : chunkc tiling::desktop --layout monocle
ctrl + alt - d : chunkc tiling::desktop --layout float
ctrl + alt - w : chunkc tiling::desktop --deserialize ~/.chunkwm_layouts/dev_1
